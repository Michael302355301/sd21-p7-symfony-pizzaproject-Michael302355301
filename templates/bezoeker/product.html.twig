{% extends 'base.html.twig' %}


{% block body %}
    </style>






    <style>
        .categorie{
            position: relative;
            width: 100%;
            color: black;
        }
        .categorie:hover .categorieImage{
            opacity: 0.3;
        }
        .categorieImage{
            opacity: 1;
            display: block;
            width: 100%;
            height: 325px;
            transition: .2s ease;
            backface-visibility: hidden;
        }
        .categorie:hover .categorieMiddle {
            opacity: 1;
        }
        .categorieMiddle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);

        }
        .categorieHoverImage {
            color: black;
            font-size: 30px;
            padding: 16px 32px;
        }
        .categorieText {
            position: absolute;
            bottom: 8px;
            left: 110px;
            font-size: 20px;
            font-family: Century;
            text-align: center;


        }
        a{
            text-decoration: none;

        }
    </style>
<br class='container-md mt-2'>
    <div class='row'>
        {% for product in products %}
            <div class='col-4'>
                <div class='categorie'>
                    <img src='{{ product.img }}' alt='border' class='categorieImage rounded' style='width:100%'>
                    <div class='categorieText'><b>{{product.name}}</b></div>
                    <div class='categorieMiddle'>
                        <div class='categorieHoverImage'><i class='bi bi-zoom-in'></i></div>
                    </div>
                </div>
            </div>
    </div>
        {% endfor %}

    <br> <br> <br> <br>
    </div>
    {% endblock %}